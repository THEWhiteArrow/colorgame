<% layout('layouts/boilerplate') %>
<script src="/js/anime.min.js" type="text/javascript"></script>
<h1>Global Ranking</h1>
<div class="container">
   <div class="col">
      <h2>Hard Mode</h2>
      <ul id="ranking">
         <% let n=1 %>
         <% for(let score of sortedScores) { %>
         <% if(score.mode==="hard") {%>
         <li class="hard">
            <div class="place">Place <span class="number"><%= n %></span> <span class="dwukropek">:</span></div>
            <div class="data"> <%=score.user  %> - <%= score.score %></div>
         </li>
         <% n+=1 %>
         <% } %>
         <% } %>
      </ul>
   </div>

   <div class="col">
      <h2>Easy Mode</h2>
      <ul id="ranking">
         <%  n=1 %>
         <% for(let score of sortedScores) { %>
         <% if(score.mode==="easy") {%>
         <li>
            <div class="place">Place <span class="number"><%= n %></span> <span class="dwukropek">:</span></div>
            <div class="data"> <%=score.user  %> - <%= score.score %></div>
         </li>
         <% n+=1 %>
         <% } %>
         <% } %>
      </ul>
   </div>

</div>
<div class="absolute left">
   <div class="link">
      <a href="/"><span class="msg">Play</span>
         <span class="svg l"></span>
      </a>
   </div>
</div>

<script>
   const tl = anime.timeline({});

tl.add({
   targets: '.hard',
   translateX: -400,
   translateY: -200,
   opacity:0,
   duration:0.1,
   easing: 'easeInOutQuad'
})
tl.add({
   targets: '.hard',
   opacity:1,
   translateX: 0,
   translateY: 0,
   delay:anime.stagger(200),
   duration:5000,
   easing: 'easeInOutQuad'
})

</script>